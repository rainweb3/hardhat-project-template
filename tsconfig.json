{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "rootDir": "."
        // 可选：如果 types/ 下有全局类型
        // "typeRoots": ["types", "node_modules/@types"]
    },
    "include": [
        "scripts/**/*.ts",
        "test/**/*.ts",
        "types/**/*.ts",
        "hardhat.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}